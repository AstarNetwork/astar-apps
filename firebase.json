{
  "hosting": {
    "public": "dist/spa",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ 
      {
        "key": "X-Frame-Options",
        "value": "DENY"
      },
      {
        "key": "Content-Security-Policy", 
        "value": "frame-ancestors 'none'"
      }
    ]
  }
}
